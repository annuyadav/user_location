<p><strong> Name: </strong>
  <%= @user.name %>
</p>


<p><strong> Address: </strong>
  <%= @user.address %>
</p>


<h4>Near by users</h4>
<div>
  <% markers = "" %>
  <% @near_by_users.each do |user| %>
      <% markers << "&markers=color:blue%7C#{user.latitude}%2C#{user.longitude}" %>
  <li><%= user.name %> : <%= user.address %></li>
  <% end %>
</div>

<%= image_tag "http://maps.google.com/maps/api/staticmap?size=1000x500&zoom=12&maptype=roadmap&sensor=false&
zoom=16&markers=#{@user.latitude}%2C#{@user.longitude}#{markers}" %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
